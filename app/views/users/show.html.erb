<%= render "shared/second-header" %>
<div class="item-contents-user">
  <p class="main-title-show"><%= @nickname %>さんの商品一覧</p>
  <ul class='item-lists-show'>
    <% @items.each do |item| %>
    <li class='list'>
          <%= link_to item_path(item.id), method: :get do %>
          <div class='item-img-content'>
            <%= image_tag item.image, class: "item-img-show" %>
          </div>
          <div class='item-info'>
            <h3 class='item-name'>
              <%= item.name %>
           </h3>
            <div class='item-price'>
             <div class='star-btn'>
              <span class='star-count'>残り販売数 <%= item.joint_buying_id %></span>
              </div>
            </div>
          </div>
          <% end %>
    </li>
    <% end %>
  </ul>
</div>
<div class="item-contents-user">
  <p class="main-title-purchase"><%= @nickname %>さんの決済待ち商品</p>
  <ul class='item-lists-show'>
     <% @ordered_items.each do | ordered_item | %>
      <% unless ordered_item == @purchased_items %>
      <li class='list'>
          <%= link_to item_purchases_path(ordered_item.id), method: :get do %>
            <div class='item-img-content'>
              <%= image_tag ordered_item.image, class: "item-img-show" %>
           </div>
            <div class='item-info'>
              <h3 class='item-name'>
                <%= ordered_item.name %>
              </h3>
            </div>
          <% end %>
      </li>
      <% end %>
      <% end %>
  </ul>
</div>
<%= link_to( new_item_path, class: 'purchase-btn') do %>
  <span class='purchase-btn-text'>出品する</span>
  <%= image_tag 'baseline_shopping_bag_white_18dp.png' , size: '160x55' ,class: "purchase-btn-icon" %>
<% end %>
<%= render "shared/second-footer" %>